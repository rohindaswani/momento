

<%= form_for @user, html: {multipart: true} do |f| %>


<% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> prohibited
        this account from being saved:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
